<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Login - Note-Taking App</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!-- Header with navigation -->
    <header>
      <div class="container">
        <h1>Login</h1>
        <nav class="navbar">
          <a href="/">Home</a>
          <a href="/auth/register">Register</a>
        </nav>
      </div>
    </header>

    <!-- Login form container -->
    <div class="container">
      <!-- Display flash error messages if they exist -->
      <% if (error_msg) { %>
      <div class="alert"><%= error_msg %></div>
      <% } %> <% if (error) { %>
      <div class="alert"><%= error %></div>
      <% } %>
      <!-- Login form -->
      <form action="/auth/login" method="POST">
        <input type="email" name="email" placeholder="Email" required />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <button type="submit">Login</button>
      </form>
      <p>No account? <a href="/auth/register">Register</a></p>
    </div>

    <!-- Footer -->
    <footer>
      <div class="container">
        <p>
          &copy; <%= new Date().getFullYear() %> Note-Taking App. All rights
          reserved.
        </p>
      </div>
    </footer>
  </body>
</html>
